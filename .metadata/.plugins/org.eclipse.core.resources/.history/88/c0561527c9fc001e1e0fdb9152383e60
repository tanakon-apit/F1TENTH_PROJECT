#ifndef INC_RC_SIGNAL_H_
#define INC_RC_SIGNAL_H_

#include "stm32g4xx_hal.h"

typedef struct {
	TIM_HandleTypeDef *htimx;
	uint32_t channelx;
	GPIO_TypeDef *port;
	uint16_t pin;
	float gain;
}RC_Signal_Structure;

typedef enum {
	False = 0,
	True
}bool;

uint8_t RC_Signal_Init(
		RC_Signal_Structure *RCx,
		float cpu_freq,
		float pwm_freq,
		bool isCHN
);

void RC_Signal_Write(
		RC_Signal_Structure *RCx,
		float pulse_width,
);

#endif /* INC_RC_SIGNAL_H_ */
