#include "BNO055.h"

HAL_StatusTypeDef BNO055_Init(BNO055_Structure *bno, I2C_HandleTypeDef *hi2cx, uint8_t addr)
{
	bno->hi2cx = hi2cx;
	uint8_t address = BNO055_ADD_H;
	if (addr == 0) address = BNO055_ADD_L;
	HAL_I2C_Mem_Read_DMA(bno->hi2cx, address, CHIP_ID, 1, bno->RxBuffer, 1);
	if (bno->RxBuffer[0] != 0xA0) return HAL_ERROR;

	HAL_delay(10);
	HAL_I2C_Mem_Write_DMA(bno->hi2cx, OPR_MODE, MemAddress, MemAddSize, pData, Size)
}

