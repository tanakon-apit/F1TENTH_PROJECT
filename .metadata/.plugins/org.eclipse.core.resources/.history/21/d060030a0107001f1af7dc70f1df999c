#ifndef INC_AS5600_H_
#define INC_AS5600_H_

#include "stm32g4xx_hal.h"
#include "math.h"

#define AS5600_ADDRESS 0x36 << 1

typedef enum {
	degree,
	radian
}Angle_Unit;

typedef struct {
	I2C_HandleTypeDef *hi2cx;
	HAL_DMA_StateTypeDef flag;
	uint8_t DataBuffer[2];
	float gain;
	double angle;
}AS5600_Structure;

#endif /* INC_AS5600_H_ */
